// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String 
  password String
  name     String
  surname  String
  birthday String
  phone    String
  role     role   @default(user)
}

model Verification {
  id        String @unique
  code      String
  email     String
  createdAt DateTime @default(now())
}

model Phone {
  id    Int    @id @default(autoincrement())
  phone String
}

model Info {
  id               Int    @id @default(autoincrement())
  name             String
  location_geo     String
  location_address String
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      String
  image      String
  categoryId Category @relation(fields: [categroyId], references: [id])
  categroyId Int
  Basket     Basket   @relation(fields: [basketId], references: [id])
  basketId   Int
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  icon    String
  Product Product[]
}

model Order {
  id            Int      @id @default(autoincrement())
  address       String
  phone         String
  name          String
  purchase_type String
  created       DateTime @default(now())
  Basket        Basket[]
}

model Basket {
  id         Int       @id @default(autoincrement())
  order_id   Order     @relation(fields: [orderId], references: [id])
  orderId    Int
  product_id Product[]
}

enum role {
  user
  admin
  none
}
